% YOUTUBE ------------------------------------------------------------------------------------------------------------------
\DeclareDatamodelEntryfields[youtube]{autor,titulo,cidade,data,duracao,distribuidor,url,acesso}
\DeclareFieldFormat{youtube-titulo}{\MakeUppercase{\thefield{titulo}}}
\DeclareFieldFormat{youtube-cidade}{\thefield{cidade}: }
\DeclareFieldFormat{youtube-distribuidor}{\thefield{distribuidor}, }
\DeclareFieldFormat{youtube-data}{\thefield{data}}
\DeclareFieldFormat{youtube-url}{Disponível em: \thefield{url}}
\DeclareFieldFormat{youtube-acesso}{Acesso em: \thefield{acesso}}
\DeclareBibliographyDriver{youtube}{
	\unspace
	\printfield[youtube-titulo]{titulo}
	\newunit\newblock
	\printfield[youtube-cidade]{cidade}\printfield[youtube-distribuidor]{distribuidor}\printfield[youtube-data]{data}
	\newunit\newblock
	\printfield[youtube-url]{url}
	\newunit\newblock
	\printfield[youtube-acesso]{acesso}
	\finentry
}
