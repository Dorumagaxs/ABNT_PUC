% LIVRO --------------------------------------------------------------------------------------------------------------------
\DeclareDatamodelEntryfields[livro]{autor,titulo,subtitulo,edicao,cidade,editora,ano,ebook}
\DeclareFieldFormat{livro-autor}{\thefield{autor}}
\DeclareFieldFormat{livro-titulo}{\textbf{\thefield{titulo}}}
\DeclareFieldFormat{livro-subtitulo}{: \thefield{subtitulo}}
\DeclareFieldFormat{livro-edicao}{\thefield{edicao}}
\DeclareFieldFormat{livro-cidade}{\thefield{cidade}: }
\DeclareFieldFormat{livro-editora}{\thefield{editora}, }
\DeclareFieldFormat{livro-ano}{\thefield{ano}}
\DeclareFieldFormat{livro-ebook}{\textit{\thefield{ebook}}}
\DeclareBibliographyDriver{livro}{
	\unspace
	\printfield[livro-autor]{autor}
	\newunit\newblock
	\printfield[livro-titulo]{titulo}
	\newunit\newblock
	\printfield[livro-edicao]{edicao}
	\newunit\newblock
	\printfield[livro-cidade]{cidade}\printfield[livro-editora]{editora}\printfield[livro-ano]{ano}
	\newunit\newblock
	\printfield[livro-ebook]{ebook}
	\finentry
}
