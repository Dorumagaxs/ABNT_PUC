% BLOG --------------------------------------------------------------------------------------------------------------------- 
\DeclareDatamodelEntryfields[blog]{autor,titulo,autorblog,tituloblog,cidade,ano,url,acesso}
\DeclareFieldFormat{blog-autor}{\thefield{autor}}
\DeclareFieldFormat{blog-titulo}{\thefield{titulo}}
\DeclareFieldFormat{blog-autorblog}{\textit{In}: \thefield{autorblog}}
\DeclareFieldFormat{blog-tituloblog}{\textbf{\thefield{tituloblog}}}
\DeclareFieldFormat{blog-cidade}{\thefield{cidade}, }
\DeclareFieldFormat{blog-ano}{\thefield{ano}}
\DeclareFieldFormat{blog-url}{Disponível em: \thefield{url}}
\DeclareFieldFormat{blog-acesso}{Acesso em: \thefield{acesso}}
\DeclareBibliographyDriver{blog}{
	\unspace
	\printfield[blog-autor]{autor}
	\newunit\newblock
	\printfield[blog-titulo]{titulo}
	\newunit\newblock
	\printfield[blog-autorblog]{autorblog}
	\newunit\newblock
	\printfield[blog-tituloblog]{tituloblog}
	\newunit\newblock
	\printfield[blog-cidade]{cidade}\printfield[blog-ano]{ano}
	\newunit\newblock
	\printfield[blog-url]{url}
	\newunit\newblock
	\printfield[blog-acesso]{acesso}
	\finentry
}
